<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div class="container">
    <div class="row">
        <div class="col">
            <% if (director.path_to_image !== null) { %>
                <img src="<%= director.path_to_image %>" class="img-thumbnail" alt="Director">
            <% } else { %>
                <img src="/images/uploads/directors/default.png" class="img-thumbnail" alt="Default">
            <% } %>
        </div>
        <div class="col">
         Name: <%- director.name%>
        </div>
        <div class="col">
         Born on: <%- director.birth_date%>
        </div>
        <div class="col">
           <p><%- directorAge %> years old</p>
        </div>
      </div>
      <br>
    <div class="row">
        <div class="col">
            <p>Biography: </p>
            <%- director.bio%>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col">
            <p>Movies directed by <%- director.name%>:</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            Movie
        </div>
        <div class="col">
            Genre
        </div>
        <div class="col">
            Release Date
        </div>
    </div>
    <% director.movies.forEach(movie => { %>
        <div class="row">
            <div class="col">
                <%= movie.title %>
            </div>
            <div class="col">
                <%= movie.genre %>
            </div>
            <div class="col">
                <%= movie.release_date %>
            </div>
        </div>
        <% }) %>
</div>
  


