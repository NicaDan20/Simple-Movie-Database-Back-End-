<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.min.css" crossorigin="anonymous">

<body>
    <div class="container">
        <div class="row">
            <div class="col-md">
                <h1 class="mb-3">Show Movies</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            Title
        </div>
        <div class="col">
            Date of Release
        </div>
        <div class="col">
            Buttons
        </div>
    </div>
    <% movies.forEach(movie => { %>
        <div class="row">
            <div class="col">
                <%= movie.title %>
            </div>
            <div class="col">
                <%= movie.release_date %>
            </div>
            <div class="col">
                <a href="/admin/editMovie/<%=movie.uuid%>" class="btn btn-primary">Edit Movie</a>
                <form method="POST" action="/admin/deleteMovie/<%= movie.uuid %>?_method=DELETE">
                    <button type="submit" class="btn btn-danger">Delete Movie</button>
                </form>
            </div>
        </div>
        <% }) %>

</body>
